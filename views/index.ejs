<%- include('layout/header') -%>
<%- include('layout/nav', {user}) -%>
<div class="container">
  <%- include('layout/search') -%>
  <% if(user) { %>
  <h1 class="title">Welcome <%= user.email %></h1>
  <% } else { %>
  <h1 class="title">Welcome</h1>
  <% } %>
  <h4 class="subtitle"><%= title %></h4>
  <%  if(!reviews.length) { %>
  <h1 class="title">No Records Found</h1>
  <% } %>
  <%  reviews.forEach(function(i) { %>
  <%- include('layout/review', {review: i}) -%>
  <% }) %>
</div>
<script src="js/index.js"></script>
<%- include('layout/footer') -%>